{
  "name": "@justrandomnickname/webviewgenie",
  "version": "1.0.3",
  "description": "A Capacitor plugin for opening external URLs in a native WebView with customizable loading animations and navigation tracking (iOS)",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "Package.swift",
    "JustrandomnicknameWebviewgenie.podspec",
    "LICENSE",
    "CREDITS.md",
    "README.md"
  ],
  "author": "justrandomnickname",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justrandomnickname/capp-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/justrandomnickname/capp-plugin/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "webview",
    "ios",
    "loading-indicator",
    "animation",
    "swiftui"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild -scheme CapacitorCommunityWebviewgenie -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "npx @capacitor/docgen --api WebViewGeniePlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.0.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "swiftlint": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "acknowledgments": {
    "SwiftfulLoadingIndicators": {
      "name": "SwiftfulLoadingIndicators",
      "license": "MIT",
      "author": "Nick Sarno (@SwiftfulThinking)",
      "repository": "https://github.com/SwiftfulThinking/SwiftfulLoadingIndicators",
      "description": "Loading indicators and animations library for SwiftUI. The code has been integrated directly into this plugin under MIT license."
    }
  }
}
